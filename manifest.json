{
  "manifest_version": 3,
  "name": "Learning Extension",
  "version": "1.2",
  "description": "An extension that summarize your article for you and then quizzes you!",

  "action": {
    "default_icon": "./assets/img/icon.png"
  },

  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "tabs",
    "sidePanel"
  ],

  "side_panel": {
    "default_path": "./sidepanel.html"
  },

  "background": {
    "service_worker": "./scripts/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>", "http://*/*", "https://*/*"],
      "js": ["./scripts/script.js", "./scripts/dashboard.js", "./scripts/display.js", "./scripts/request.js", "./scripts/storage.js", "./scripts/utilities.js"]
    }
  ],

  "host_permissions": [
    "*://*/*"
  ],

  "web_accessible_resources": [
    {
      "resources": ["./sidepanel.html", "./style/script.js"],
      "matches": ["<all_urls>", "http://*/*", "https://*/*"]
    }
  ]
}
